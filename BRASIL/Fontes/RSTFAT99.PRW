	Private lXmlEndRow   	:= .f.
	Private cPergTit		:= cAliasLif

	DbSelectArea("SA3")
	SA3->(DbSetOrder(7))
	SA3->(DbGoTop())
	If SA3->(DbSeek(xFilial("SA3")+__cUserId))
		If !SubStr(SA3->A3_COD,1,1) $ "S#G" //Acesso somente para supervisores e gerentes
