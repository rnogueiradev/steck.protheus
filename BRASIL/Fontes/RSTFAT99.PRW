	TRCell():New(oSection,"01"				,,"CLIENTE"					,,06,.F.,)
	TRCell():New(oSection,"02"				,,"LOJA"					,,02,.F.,)
	TRCell():New(oSection,"03"				,,"NOME"					,,40,.F.,)
	TRCell():New(oSection,"04"				,,"SUPERVISOR"				,,25,.F.,)
