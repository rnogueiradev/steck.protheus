Static Function GravaDados(aTxt)

	Local nX    	  := 0
	Local cQry    
	//Private lMsErroAuto := .F.
	Private aCabec   := {}


	//Limpeza dos filtros 


	cQry := " UPDATE "+RetSqlName("SB1")+" SB1 SET B1_XINFMP = ''  WHERE SB1.B1_FILIAL = '"+xFilial("SB1")+"' AND SB1.B1_XINFMP  = 'S' AND  SB1.D_E_L_E_T_ <> '*'   "
	_cEvSql   :=  TcSqlExec(cQry)

	If _cEvSql  <> 0
			DisarmTransaction()
			MsgAlert('Erro no UPDATE: ' + AllTrim(Str(_cEvSql)),'ATENวรO')
	EndIf
	

	For nX := 1 to Len(aTxt)

		DbSelectArea("SB1")
		DbSetOrder(1)
		If DbSeek(xFilial("SB1")+aTxt[nX,1])
			If Reclock("SB1",.F.)
				SB1->B1_XINFMP :="S"
				MsUnlock()
			Endif
		Endif

	Next nx

	MsgInfo("Processamento finalizado!!!","Aten็ใo")


Return
