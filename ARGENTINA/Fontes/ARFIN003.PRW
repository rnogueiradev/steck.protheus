Static Function _fGrava()

DbSelectArea("SX6")
DbSetOrder(1)
If DbSeek(xFilial("SX6")+"MV_DATAFIN")
	
	If Reclock("SX6",.F.)
		SX6->X6_CONTSPA := Dtos(_dData)
		MsUnlock()
	Endif
	
Endif


return

